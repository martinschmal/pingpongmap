<h2>Edit this table</h2>

<div class="form-group">

  <form action="/table/{{table._id}}" method="POST">
    <p><label for="location">Location</label></p>
    <input type="text" value="{{table.location}}" name="location" id="location">
    <p><label for="neighbourhood">Neighbourhood</label></p>
    <input type="text" value="{{table.neighbourhood}}" name="neighbourhood" id="neighbourhood">
    <p><label for="description">Description</label></p>
    <input type="text" value="{{table.description}}" name="description" id="description">
    <p><label for="public">Public</label></p>
    <input type="checkbox" value="{{table.public}}" name="public" id="public">
    <p><label for="park">Park</label></p>
    <input type="checkbox" value="{{table.park}}" name="park" id="park">
    <p><label for="playground">Playground</label></p>
    <input type="checkbox" value="{{table.playground}}" name="playground" id="playground">
    <p><label for="indoor">Indoor</label></p>
    <input type="checkbox" value="{{table.indoor}}" name="indoor" id="indoor">
    <p><label for="bar">Bar</label></p>
    <input type="checkbox" value="{{table.bar}}" name="bar" id="bar">
    <p><label for="checkbox">Lights available</label></p>
    <input type="checkbox" value="{{table.light}}" name="light" id="light">
    <p><label for="condition">General condition (1 = poor, 5 = great)</label></p>
    <select id="condition">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>


    <button type="submit">Save changes</button>
  </form>

  <div class="table-picture">
    <img src="{{table.table_image}}" alt="Image of ping pong table">
  </div>

</div>